#!/usr/bin/env bash
path="$1"
find_string="$2"
replace_string="$3"
if [ -z "$3" ]
then
  echo "Need three arguments: use rr_files path find_string replace_string"
else
  cd $path
  # Rename files
  for file in $(find . -type f -name "*$find_string*")
  do
    mv $file $(echo $file | sed "s/$find_string/$replace_string/g")
  done
  cd - > /dev/null
fi
