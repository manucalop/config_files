#!/usr/bin/env bash
path="$1"
find_string="$2"
replace_string="$3"
if [ -z "$3" ]
then
  echo "Need three arguments: use rr_files path find_string replace_string"
else
  cd $path
  find . -type f -name "*$find_string*" -exec rename s/$find_string/$replace_string/ '{}' +
  wait
  cd - > /dev/null
fi
