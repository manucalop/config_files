#!/usr/bin/env bash
path="$1"
find_string="$2"
replace_string="$3"
if [ -z "$3" ]
then
  echo "Need three arguments: use rr_dirs path find_string replace_string"
else
  cd $path
  #Rename the directories
  for dir in $(find . -type d -name "*$find_string*")
  do
    new_dir=$(echo $dir | sed "s/$find_string/$replace_string/g")
    mv $dir $new_dir
  done
  cd - > /dev/null
fi
