#!/usr/bin/env bash
pkg_name="$1"
git clone git@github.com:manucalop/python_package_template.git
if [ -z "$1" ]
then
  echo "No pkg_name argument supplied. Using default"
else
  echo "Creating $pkg_name package..."
  rm -rf python_package_template/.git
  rm python_package_template/README.md
  rr_all python_package_template/ python_package_template $pkg_name
  mv python_package_template "$pkg_name"
fi
